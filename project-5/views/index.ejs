<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Movies project-5</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- bootstrap link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', sans-serif;
            background-color: #000;
            color: #fff;
        }
        .banner {
            position: relative;
            background: url("/images/banner-img.jpg") no-repeat bottom/cover;
            width: 100%;
            height: 100vh;
            color: white;
        }
        .overlay {
            background-color: rgba(0, 0, 0, 0.5);
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }
        .banner-content {
            position: relative;
            z-index: 2;
            top: 30%;
        }
        .watch-btn {
            background-color: #ff4d4d;
            border: none;
        }
        .movie-card {
            width: 400px;
            background-color: #111;
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }
        .movie-card:hover {
            transform: scale(1.03);
            box-shadow: 0 4px 20px rgba(255, 255, 255, 0.2);
        }
        .movie-card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }
        .movie-card .card-body {
            padding: 15px;
        }
        .scroll-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px 30px;
            justify-content: flex-start;
        }
        .scroll-container .movie-card {
            width: 270px;
            flex-shrink: 0;
        }
        .text-shadow {
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        }
        .blood-text {
            color: #ff4d4d;
        }
        .horror-btn {
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <!-- header  -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent position-absolute  mx-5 my-4" style="z-index: 5;">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold" href="#">MOVIES</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="#">New</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Subscription</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Free</a></li>
                    <li class="nav-item"><a class="nav-link" href="/horrer">Horrer Movie</a></li>
                    <li class="nav-item"><a class="nav-link" href="/addMovie">Add Movie</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- banner  -->
    <section class="banner">
        <div class="overlay"></div>
        <div class="container banner-content text-white">
            <div class="col-md-7">
                <h1 class="display-4 fw-bold mt-2">Pokémon Detective Pikachu</h1>
                <p class="lead">In a world where people collect Pokémon to do battle, a boy comes across an intelligent
                    talking Pikachu who seeks to be a detective.</p>
                <p><strong>Genres:</strong> Action, Adventure, Comedy</p>
                <a class="btn btn-danger btn-lg watch-btn" href="/addMovie">Add Movie</a>
            </div>
        </div>
    </section>

    <!-- additional movie  -->
    <section class="thumbnails bg-black text-white">
        <h4 class="px-4 pt-4 text-danger text-shadow">Continue Watching</h4>
        <div class="scroll-container">
            <div class="movie-card card text-white">
                <a href="/CardInDetails?season=1"><img src="/images/Pokemon Season-1.jpg" alt="Pokemon-Series-1"></a>
                <div class="card-body">
                    <h6 class="card-title text-center blood-text">Pokemon Season 1</h6>
                </div>
            </div>
            <div class="movie-card card text-white">
                <a href="/CardInDetails?season=2"><img src="/images/Pokemon Season-2.webp" alt="Pokemon-Series-2"></a>
                <div class="card-body">
                    <h6 class="card-title text-center blood-text">Pokemon Seasno 2</h6>
                </div>
            </div>
            <div class="movie-card card text-white">
                <a href="/CardInDetails?season=3"><img src="/images/Pokemon Season-3.jpg" alt="Pokemon-Series-3"></a>
                <div class="card-body">
                    <h6 class="card-title text-center blood-text">Pokemon Season 3</h6>
                </div>
            </div>
            <div class="movie-card card text-white">
                <a href="/CardInDetails?season=4"><img src="/images/Pokemon Season-4.jpg" alt="Pokemon-Series-4"></a>
                <div class="card-body">
                    <h6 class="card-title text-center blood-text">Pokemon Season 4</h6>
                </div>
            </div>
            <div class="movie-card card text-white">
                <a href="/CardInDetails?season=5"><img src="/images/Pokemon Season-5.jpg" alt="Pokemon-Series-5"></a>
                <div class="card-body">
                    <h6 class="card-title text-center blood-text">Pokemon Season 5</h6>
                </div>
            </div>
        </div>
    </section>

    <!-- card  -->
    <div class="container mt-5" id="card">
        <h2 class="text-center mb-4 text-danger text-shadow">Movies</h2>
        <div class="row justify-content-center">
            <% record.forEach((data)=> { %>
                <div class="col-md-4 col-sm-6 col-12 d-flex justify-content-center mb-4">
                    <div class="movie-card card text-white">
                        <a href="/indetails/<%= data._id %>">
                            <img src="<%= data.avatar %>" alt="Movie Image" width="100%">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title text-center blood-text mb-3">
                                <%= data.movieTitle %>
                            </h5>
                            <ul class="list-unstyled mb-3">
                                <li><strong>Director Name:</strong>
                                    <%= data.directorName %>
                                </li>
                                <li><strong>Release Year:</strong>
                                    <%= data.releaseYear %>
                                </li>
                                <li><strong>Genre:</strong>
                                    <%= data.Genre %>
                                </li>
                            </ul>
                            <div class="d-flex justify-content-between">
                                <a href="/update/<%= data._id %>" class="btn btn-danger horror-btn">Update</a>
                                <a href="/delete/<%= data._id %>" class="btn btn-dark horror-btn">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq"
        crossorigin="anonymous"></script>
</body>

</html>