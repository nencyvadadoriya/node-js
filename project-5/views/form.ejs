<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Movie</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212;
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
            padding-top: 50px;
        }
        .movie-form {
            max-width: 600px;
            margin: auto;
            background: #1f1f1f;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(255, 0, 0, 0.15);
        }
        h2 {
            text-align: center;
            color: #e50914;
            margin-bottom: 30px;
        }
        label {
            font-weight: 500;
        }
        .form-control, .form-select {
            background-color: #2a2a2a;
            border: none;
            color: #fff;
        }
        .form-control::placeholder {
            color: #bbb;
        }
        .form-control:focus, .form-select:focus {
            border-color: #e50914;
            box-shadow: 0 0 0 0.2rem rgba(229, 9, 20, 0.25);
        }
        .form-select option {
            color: #000;
        }
        .btn-custom {
            background-color: #e50914;
            color: white;
            border: none;
            width: 100%;
        }
        .btn-custom:hover {
            background-color: #b0060f;
        }
        .poster-preview {
            margin-top: 10px;
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-radius: 10px;
            background: #444;
        }
        .custom-select-dark {
            background-color: #2a2a2a;
            color: #fff;
            border: none;
        }
        .custom-select-dark option {
            background-color: #1f1f1f;
            color: white;
        }
    </style>
</head>
<body>
    <div class="movie-form">
        <h2>Add Movie</h2>
        <form method="POST" action="/insert" enctype="multipart/form-data">
            <!-- Movie Title -->
            <div class="mb-3">
                <label class="form-label">Movie Title</label>
                <input type="text" class="form-control" name="movieTitle" placeholder="Enter movie name" required>
            </div>
            <!-- Director Name -->
            <div class="mb-3">
                <label class="form-label">Director Name</label>
                <input type="text" class="form-control" name="directorName" placeholder="Enter director name" required>
            </div>
            <!-- Release Year -->
            <div class="mb-3">
                <label class="form-label">Release Year</label>
                <input type="number" class="form-control" name="releaseYear" placeholder="e.g. 2025" required>
            </div>
            <!-- Genre -->
            <div class="mb-3">
                <label class="form-label">Genre</label>
                <select class="form-select custom-select-dark" name="Genre" required>
                    <option value="" disabled selected>Select Genre</option>
                    <option value="Horror">Horror</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Historical">Historical</option>
                    <option value="Romance">Romance</option>
                </select>
            </div>
            <!-- Poster Upload -->
            <div class="mb-3">
                <label class="form-label">Movie Poster</label>
                <input type="file" class="form-control" name="avatar" required>
            </div>
                <!-- Submit Button -->
                <button type="submit" class="btn btn-custom mt-3">Submit</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>