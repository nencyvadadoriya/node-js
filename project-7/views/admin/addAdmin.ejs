<%- include('../header') %>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<% if (success && success.length > 0) { %>
    <script>
		Swal.fire({
			icon: 'success',
			title: 'Success',
			text: '<%= success %>',
			confirmButtonColor: '#28a745'
		});
	</script>
  <% } %>
  
  <% if (error && error.length > 0) { %>
    <script>
		Swal.fire({
			icon: 'error',
			title: 'Error',
			text: '<%= error %>',
			confirmButtonColor: '#dc3545'
		});
	</script>
  <% } %>
  

<main class="main px-4 py-4">
    <div class="container-fluid">
        <div class="row">
            <div class="form-wrapper" style="margin-left: 10px; max-width: 600px; width: 100%;">
                <div class="card shadow border-0">
                    <div class="card-header  text-white">
                        <h4 class="mb-0">Add Admin</h4>
                    </div>
                    <div class="card-body">
                        <form action="/insert" method="post" enctype="multipart/form-data">
                            <!-- First Name -->
                            <div class="form-group mb-3">
                                <label for="fname">First Name</label>
                                <input type="text" class="form-control" id="fname" name="fname" placeholder="Enter Your First Name" required />
                            </div>
                            <!-- Last Name -->
                            <div class="form-group mb-3">
                                <label for="lname">Last Name</label>
                                <input type="text" class="form-control" id="lname" name="lname" placeholder="Enter Your Last Name" required />
                            </div>
                            <!-- Email -->
                            <div class="form-group mb-3">
                                <label for="email">Email Address</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required />
                            </div>
                            <!-- Password -->
                            <div class="form-group mb-3">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required />
                            </div>
                            <!-- Gender -->
                            <div class="form-group mb-3">
                                <label>Gender</label>
                                <div class="d-flex gap-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" value="male" id="male" required />
                                        <label class="form-check-label" for="male">Male</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gender" value="female" id="female" required />
                                        <label class="form-check-label" for="female">Female</label>
                                    </div>
                                </div>
                            </div>
                            <!-- City -->
                            <div class="form-group mb-3">
                                <label for="city">City</label>
                                <select class="form-select" id="city" name="city" required>
                                    <option value="">Select</option>
                                    <% let myCity = ['Surat', 'Baroda', 'Rajkot', 'Mumbai']; %>
                                    <% myCity.forEach((item) => { %>
                                        <option value="<%= item %>"><%= item %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <!-- image -->
                            <div class="form-group mb-4">
                                <label>Image</label>
                                <input type="file" class="form-control-file" id="image" name="image" value="image" required />
                            </div>
                            <!-- Submit -->
                            <div class="text-start">
                                <button type="submit" class="btn btn-success">Add Admin</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../footer") %>
</main>
