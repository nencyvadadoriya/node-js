<%- include('../header') %>
<!-- sweetalert links  -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (adminSuccess) { %>
<script>
    Swal.fire({
        icon: 'success',
        title: 'Admin Added Successfully',
        showConfirmButton: true,
        timer: 5000
    });
</script>
<% } %>
    <div class="container">
        <div class="page-inner">
            <div class="page-header">
                <h3 class="fw-bold mb-3">Forms</h3>
                <ul class="breadcrumbs mb-3">
                    <li class="nav-home">
                        <a href="/">
                            <i class="icon-home"></i>
                        </a>
                    </li>
                    <li class="separator">
                        <i class="icon-arrow-right"></i>
                    </li>
                    <li class="nav-item">
                        <a href="/addAdmin">Forms</a>
                    </li>
                </ul>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Form Elements</div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <form action="/insert" method="post" enctype="multipart/form-data">
                                    <!-- first name  -->
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input type="text" class="form-control" id="fname" name="fname"
                                            placeholder="Enter Your First Name" required />
                                    </div>
                                    <!-- last name  -->
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input type="text" class="form-control" id="lname"
                                            placeholder="Enter Your Last Name" required  name="lname"/>
                                    </div>
                                    <!-- email   -->
                                    <div class="form-group">
                                        <label>Email Address</label>
                                        <input type="email" class="form-control" id="email" placeholder="Enter Email"
                                           name="email" required />
                                    </div>
                                    <!-- password  -->
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                            placeholder="Password" required/>
                                    </div>
                                    <!-- gender  -->
                                    <div class="form-group">
                                        <label>Gender</label><br />
                                        <div class="d-flex">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="gender" value="male" required/>
                                                <label class="form-check-label">Male</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="gender" value="female" required/>
                                                <label class="form-check-label">Female</label>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- hobby  -->
                                    <div class="form-group">
                                        <label>Hobby</label>
                                        <div class="col-md-9">
                                            <% let myHobby=['Reading', 'Coding' , 'Gaming' ] %>
                                                <% myHobby.map((item)=> { %>
                                                    <div class="form-check mr-sm-2">
                                                        <input type="checkbox" class="form-check-input" id="hobby"
                                                            name="hobby" value="<%= item %>" />
                                                        <%= item %>
                                                    </div>
                                                    <% }) %>
                                        </div>
                                    </div>
                                    <!-- city  -->
                                    <div class="form-group">
                                        <label>City</label>
                                        <div class="col-md-9">
                                            <select class="select2 form-select shadow-none"
                                                style="width: 100%; height: 36px" name="city">
                                                <option>Select</option>
                                                <% let myCity=['Surat', 'Baroda' , 'Rajkot' , 'Mumbai' , ];%>
                                                    <% myCity.map((item)=> { %>
                                                        <option value="<%= item %>">
                                                            <%= item %>
                                                        </option>
                                                        <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <!-- image  -->
                                    <div class="form-group">
                                        <label>Avatar</label>
                                        <input type="file" class="form-control-file" id="avatar"  name="avatar"  required />
                                    </div>
                                    <!-- Description -->
                                    <div class="form-group">
                                        <label for="comment">Description</label>
                                        <textarea class="form-control" name="desc" rows="5" id="desc" required></textarea>
                                    </div>
                                    <!-- button  -->
                                    <div class="card-action">
                                        <button class="btn btn-success" type="submit">Add Admin</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../footer') %>
