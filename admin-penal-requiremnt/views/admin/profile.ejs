<%- include('../header') %>
  <style>
    body {
      background-color: #eef2f7;
      font-family: sans-serif;
    }

    .profile-container {
      background-color: #fff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.06);
      max-width: 800px;
      margin: 10px;
    }

    h3 {
      margin-bottom: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    td {
      padding: 12px 10px;
      vertical-align: top;
    }

    td.label {
      font-weight: bold;
      color: #555;
      width: 30%;
    }

    td.value {
      color: #222;
    }

    img.profile-pic {
      width: 100px;
      height: 100px;
      object-fit: cover;
      border-radius: 10%;
      border: 2px solid #ccc;
    }

    .btn-edit {
      display: inline-block;
      margin-top: 25px;
      background-color: #6642c1;
      color: #fff;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 6px;
    }

    .btn-edit:hover {
      color: white;
      background-color: #5a37b1;
    }
  </style>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <% if (success && success.length> 0) { %>
    <script>
      Swal.fire({
        icon: 'success',
        title: 'Success',
        text: '<%= success %>',
        confirmButtonColor: '#28a745'
      });
    </script>
    <% } %>

      <% if (error && error.length> 0) { %>
        <script>
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: '<%= error %>',
            confirmButtonColor: '#dc3545'
          });
        </script>
        <% } %>

          <div class="profile-container">
            <h3>Admin Profile</h3>
            <table>
              <tr>
                <td class="label">First Name</td>
                <td class="value">
                  <%= currentAdmin.fname %>
                </td>
              </tr>
              <tr>
                <td class="label">Last Name</td>
                <td class="value">
                  <%= currentAdmin.lname %>
                </td>
              </tr>
              <tr>
                <td class="label">Email Address</td>
                <td class="value">
                  <%= currentAdmin.email %>
                </td>
              </tr>
              <tr>
                <td class="label">Password</td>
                <td class="value">••••••••</td>
              </tr>
              <tr>
                <td class="label">Gender</td>
                <td class="value">
                  <%= currentAdmin.gender %>
                </td>
              </tr>
              <tr>
                <td class="label">City</td>
                <td class="value">
                  <%= currentAdmin.city %>
                </td>
              </tr>
              <tr>
                <td class="label">Image</td>
                <td class="value">
                  <img src="../<%= currentAdmin.image %>" alt="Profile Image" class="profile-pic" />
                </td>
              </tr>
            </table>
            <a href="/updateProfile" class="btn-edit">Edit Profile</a>
          </div>


          <%- include('../footer') %>