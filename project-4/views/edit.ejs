<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Music Album Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #667eea, #764ba2);
        }
        .container-box {
            display: flex;
            width: 900px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
            background: white;
        }
        .right-panel {
            padding: 40px;
            flex: 2;
        }
        .btn-custom {
            width: 100%;
            background: #764ba2;
            border: none;
        }
        .btn-custom:hover {
            background: #5a3a85;
        }
        .form-control:focus, .form-select:focus {
            border-color: #764ba2 !important;
            box-shadow: none !important;
        }
    </style>
</head> 
<body>
    <div class="container-box">
        <div class="right-panel">
            <h3 class="mb-4">Edit Album Details</h3>
            <form method="post" action="/edit/<%= record.id %>" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Album Name</label>
                    <input type="text" class="form-control" name="album_name" placeholder="Enter Album Name" value="<%= record.album_name %>">
                </div>
                <div class="mb-3">
                    <label class="form-label">Artist Name</label>
                    <input type="text" class="form-control" placeholder="Enter Artist Name" name="artist_name" value="<%= record.artist_name %>"  >
                </div>
                <div class="mb-3">
                    <label class="form-label">Release Year</label>
                    <input type="number" class="form-control" placeholder="Enter Release Year" name="release_year" value="<%= record.release_year %>">
                </div>
                <div class="mb-3">
                    <label class="form-label">Genre</label>
                    <select class="form-control" name="genre">
                        <option value="">Select Genre</option>
                        <% let genres = ["Pop", "Rock", "Hip-Hop", "Jazz", "Classical"]; %>
                        <% genres.forEach((genre) => { %>
                            <option value="<%= genre %>" <%= record.genre === genre ? 'selected' : '' %>><%= genre %></option>
                        <% }); %>
                    </select>
                    
                </div>
                <div class="mb-3">
                    <input type="file" class="form-control" name="album_cover">
                    <img src="../<%= record.album_cover %>" width="50">                    
                </div>

                <button type="submit" class="btn btn-dark btn-custom">Update</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>